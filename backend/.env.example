# SnackReach Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=development
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Stripe Configuration
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Plaid Configuration
# Get your keys from: https://dashboard.plaid.com/developers/keys
# Use 'sandbox' for testing, 'development' for development, 'production' for live
PLAID_ENV=sandbox
PLAID_CLIENT_ID=your_plaid_client_id_here
PLAID_SECRET=your_plaid_secret_key_here

# Railway Configuration (auto-set by Railway, but you can override)
# PORT=8080 (Railway sets this automatically)
